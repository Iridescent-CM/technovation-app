<div class="grid">
  <div class="grid__col-6">
    <div class="panel">
    <h1 class="content-heading"><%= @regional_pitch_event.name %></h1>
      <p>
        <strong>Time:</strong>
        <br />
        <%= @regional_pitch_event.starts_at
          .in_time_zone( @regional_pitch_event.timezone)
          .strftime("%A, %B %e") %>

        <br />

        <%=  @regional_pitch_event.starts_at
          .in_time_zone( @regional_pitch_event.timezone)
          .strftime("%-I:%M%P") %>

        &ndash;

        <%=  @regional_pitch_event.ends_at
          .in_time_zone( @regional_pitch_event.timezone)
          .strftime("%-I:%M%P %Z") %>
          </p>
      </p>


      <p>
        <strong>Address:</strong><br />
        <%= @regional_pitch_event.venue_address %> <br />
        <%= @regional_pitch_event.city %><br />
      </p>

      <% unless @regional_pitch_event.eventbrite_link.blank? %>
        <p>
          <strong>Eventbrite link:</strong>
          <%= link_to "#{@regional_pitch_event.name}",
            @regional_pitch_event.eventbrite_link,
            target: :_blank %>
        </p>
      <% end %>

      <% if current_account.student_profile.present? and current_student %>
        <div class="standalone-buttons">
          <div class="regional-pitch-event-selection-info">


              <% if SeasonToggles.select_regional_pitch_event? %>
                <p>
                  <%= link_to "Remove #{current_team.name} from this event",
                    student_regional_pitch_event_selection_path,
                    class: "cta-link",
                    data: {
                      method: :delete,
                      confirm: "Are you sure you want to remove your team from the event: #{@regional_pitch_event.name}?",
                    } %>
                </p>
              <% end %>

          </div>

          <p><%= link_to 'Back', student_dashboard_path(anchor: "live-events") %></p>
        </div>
      <% end %>

      <% if (current_account.judge_profile.present? and current_judge rescue false) %>
        <div class="standalone-buttons">
          <div class="regional-pitch-event-selection-info">
            <% if current_judge.selected_regional_pitch_event == @regional_pitch_event %>
              <p><strong>You are attending this event!</strong></p>

              <% if SeasonToggles.select_regional_pitch_event? %>
                <p>
                  <%= link_to "Remove yourself from this event",
                    judge_regional_pitch_event_selection_path,
                    class: "cta-link",
                    data: {
                      method: :delete,
                      confirm: "Are you sure you want to remove yourself from the event: #{@regional_pitch_event.name}?",
                    } %>
                </p>
              <% end %>
            <% else %>
              <p>
                <strong>
                  You are currently attending
                  <%= link_to current_judge.selected_regional_pitch_event_name,
                    judge_regional_pitch_event_path(current_judge.selected_regional_pitch_event) %>
                </strong>
              </p>

              <% if SeasonToggles.select_regional_pitch_event? %>
                <p>
                  <%= link_to "Select this event instead",
                    judge_regional_pitch_event_selection_path(
                    event_id: @regional_pitch_event.id
                    ),
                    class: "cta-link",
                    data: {
                      method: :post,
                      confirm: "Are you sure you want to leave your previous event and select this one?",
                    } %>
                </p>
              <% end %>
            <% end %>
          </div>
          <p><%= link_to 'Back', judge_dashboard_path %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="grid__col-6">
    <img class="grid__cel-img" src="http://web-profile.net/wp-content/uploads/google-maps-multiple-markers.png">
  </div>
</div>
<% if teams.any? %>
  <ul class="mentor-teams">
    <% teams.each do |team| %>
      <li>
        <h4><%= link_to team.name, [:mentor, team] %></h4>
        <p class="team_division">
          <%= t("views.teams.show.division_name", name: team.division_name.humanize) %>
        </p>

        <% if type === :current and team.submission.present? %>
          <%= render 'student/team_submissions/progress', submission: team.submission %>

          <small>(finished sections will appear green with a checkmark)</small>

          <div style="padding: 1rem; margin: 1rem 0; border: 1px solid #ddd;">
            <p>
              <%= link_to "Edit this team's submission",
                mentor_team_submission_path(team.submission, team_id: team.id) %>
            </p>

            <p>
              <%= link_to "See how it looks to the judges",
                app_path(team.submission),
                target: :_blank %>
            </p>
          </div>
        <% elsif type === :current %>
          <p><%= t("views.teams.index.submission_not_started", name: team.name) %></p>

          <p class="standalone-buttons">
            <%= link_to "Start a submission now",
              new_mentor_team_submission_path(team_id: team.id),
              class: "appy-button appy-button--sm" %>
          </p>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><%= t("views.teams.index.none", type: type) %></p>
<% end %>

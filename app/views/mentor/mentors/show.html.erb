<%= render 'profiles/privileged_show',
  title: t("views.mentor.mentors.show.title"),
  profile: @mentor %>

<div class="grid grid--justify-space-around">
  <div class="grid__col-sm-8 panel">
    <h3 class="reset">
      <%= t("views.mentor.mentors.show.teams",
            name: @mentor.first_name) %>
    </h3>

    <ul class="reset team-list">
      <%= render partial: 'mentor/mentors/team_preview',
        collection: @mentor.teams.current,
        locals: { profile: @mentor } %>
    </ul>
  </div>
</div>

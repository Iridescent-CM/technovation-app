<ul class="tab-menu">
  <% if current_mentor.mentor_invites.pending.any? %>
    <li class="tab-link">
      <button
        role="button"
        class="tab-button"
        data-tab-id="invitations">
        Invitations
      </button>
    </li>
  <% end %>

  <% if can_generate_certificate?(:mentor, :appreciation) %>
    <li class="tab-link">
      <button
        role="button"
        class="tab-button"
        data-tab-id="certificates">
        Certificates
      </button>
    </li>
  <% end %>

  <% if current_mentor.is_on_team? %>
    <li class="tab-link">
      <button
        role="button"
        class="tab-button"
        data-tab-id="scores">
        Scores
      </button>
    </li>
  <% end %>

  <li class="tab-link">
    <button
      role="button"
      class="tab-button"
      data-tab-id="submissions">
      Team Submissions
    </button>
  </li>

  <li class="tab-link">
    <button
      role="button"
      class="tab-button"
      data-tab-id="pitch-events">
      Pitch Events
    </button>
  </li>
</ul>

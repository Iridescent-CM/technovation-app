<div class="grid dashboard-notices">
  <div class="grid__col-sm-6 grid__col-xs-12 grid__col--bleed-y">
    <div class="grid__cell">
      <h1 class="page-heading">
        <%= t("views.application.mentor_dashboard") %>

        <small>
          <%= link_to web_icon('refresh', text: "Switch to Judging"),
            judge_dashboard_path %>
        </small>
      </h1>
    </div>
  </div>

  <div class="grid__col-sm-6 grid__col-xs-12 grid__col--bleed-y grid--align-end">
    <div class="grid__cell">
      <h1 class="page-heading">
        <%= SeasonToggles.dashboard_text(:mentor) %>

        <small>
          <%= render 'program_survey' %>
        </small>
      </h1>
    </div>
  </div>
</div>

<div class="grid">
  <div class="grid__col-md-3">
    <div class="grid__cell">
      <div class="panel">
        <%= image_tag current_mentor.profile_image_url,
          class: "thumbnail grid__cell-img" %>

        <h3 class="reset"><%= current_mentor.full_name %></h3>

        <%= link_to "View your profile", mentor_profile_path %>
      </div>
    </div>
  </div>

  <div class="grid__col-md-6">
    <div class="grid__cell">
      <%= render 'mentor/dashboards/current_actions' %>
    </div>
  </div>

  <div class="grid__col-md-3 grid__col--bleed dashboard-sidebar">
    <%= render "mentor/dashboards/info_sidebar" %>
  </div>
</div>

<%= render 'program_survey_modal' %>

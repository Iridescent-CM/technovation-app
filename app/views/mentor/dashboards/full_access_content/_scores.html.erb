<div class="flex-col-md-8">

  <% @teams.each do |team| %>
    <% all_scores = team.submission.submission_scores.complete %>
    <% quarterfinals_scores = all_scores.quarterfinals %>
    <% semifinals_scores = all_scores.semifinals %>
    <h1>
      <%= team.name.titleize %>
    </h1>
    <% if all_scores.empty? %>
      <% if !team.submission.complete? or !team.submission.present? %>
        <h3>No Scores Available</h3>

        <p>
          Unfortunately, no scores are available for <%= team.name %> because the submission
          was incomplete. Try sharing the public version with friends and mentors for feedback
          on how to improve for next year!
        </p>

        <p class="standalone-buttons">
          <%= link_to "Open your submission page",
              app_path(team.submission),
              class: "appy-button",
              target: :_blank %>
        </p>
      <% else %>
        <h3>Congratulations!</h3>

        <p>
          Congratulations on completing the <%= Season.current.year %> season of Technovation!
          Use the feedback you received at your pitch event to help you learn more and make
          sure to participate in Technovation next year. You should be proud of
          your work and share your submission with friends and mentors!
        </p>

        <p class="standalone-buttons">
          <%= link_to "Open your submission page",
              app_path(team.submission),
              class: "appy-button",
              target: :_blank %>
         </p>
      <% end %>
    <% elsif all_scores.any? %>
      <% if semifinals_scores.any? %>
        <%= render 'mentor/dashboards/full_access_content/score_table',
            team: team,
            round: :semifinals,
            scores: semifinals_scores %>
      <% end %>

      <% if quarterfinals_scores.any? %>
        <%= render 'mentor/dashboards/full_access_content/score_table',
            team: team,
            round: :quarterfinals,
            scores: quarterfinals_scores %>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= render 'mentor/dashboards/info_sidebar' %>
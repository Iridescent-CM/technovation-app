<ul class="steps">
  <%= render 'student/dashboards/completion_steps/parental_consent_form' %>

  <%= render 'completion_steps/location_details', profile: current_student %>

  <%= render 'completion_steps/confirm_changed_email', profile: current_student %>

  <%= render "completion_steps/create_team", hidden: current_student.is_on_team? %>

  <%= render "completion_steps/join_requests",
    hidden: current_student.is_on_team?,
    requests: current_student.join_requests.pending %>

  <%= render "completion_steps/invitations",
    hidden: current_student.is_on_team?,
    invites: current_student.team_member_invites.pending %>

  <%= render "student/dashboards/completion_steps/team_submission" %>
</ul>

<% if @all_scores.empty? %>
  <%= render 'student/dashboards/full_access_content/empty_scores' %>
<% else %>
  <% if @semifinals_scores.any? %>
    <%= render(
      'student/dashboards/full_access_content/scores/score_breakdown',
      round: :semifinals,
      round_name: "semifinals",
      scores: @semifinal_scores
    ) %>
  <% end %>

  <% if @quarterfinals_scores.any? %>
    <%= render(
      'student/dashboards/full_access_content/scores/score_breakdown',
      round: :quarterfinals,
      round_name: "first round",
      scores: @quarterfinals_scores
    ) %>
  <% end %>
<% end %>

<% if @all_scores.empty? %>
  <%= render 'student/dashboards/info_sidebar', certs: true %>
<% else %>
  <%= render(
    'student/dashboards/full_access_content/scores/comments_sidebar'
  ) %>
<% end %>

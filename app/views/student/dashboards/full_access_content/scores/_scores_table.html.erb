<% if !scores.all?(&:official?) %>
  Official Scores - These scores counted
<% end %>

<% if scores.any?(&:official?) %>
  <table class="ra-participants-list" style="align:center">
    <thead>
      <tr>
        <th>Score</th>
        <th>Judge Location </th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% scores.official.each do |score| %>
        <tr>
          <td><%= score.total %> </td>
          <td><%= score.judge_profile.address_details %></td>
          <td><%= link_to 'View details', send("#{current_account.type_name}_score_path",score) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if !scores.all?(&:official?) %>
  <br>
  Unofficial Scores - These scores are from a celebration event
  <table class="ra-participants-list" style="align:center">
    <thead>
      <tr>
        <th>Score</th>
        <th>Judge Location </th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% scores.unofficial.each do |score| %>
        <tr>
          <td><%= score.total %> </td>
          <td><%= score.judge_profile.address_details %></td>
          <td><%= link_to 'View details', send("#{current_account.type_name}_score_path",score) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div class="panel">
  <div class="grid">
    <div class="grid__col-12">
    <h1 class="content-heading">Select a regional pitch event</h1>
    </div>
    <% @regional_events.each do |event| %>
      <div class="grid__col-6">
        <p>
          <%= event.name %><br />
          <%= event.city %><br />

          <strong>
            <%= event.starts_at
              .in_time_zone(event.timezone)
              .strftime("%A, %B %e") %>
          </strong>

          <br />

          <%= event.starts_at
            .in_time_zone(event.timezone)
            .strftime("%-I:%M%P") %>

          &ndash;

          <%= event.ends_at
            .in_time_zone(event.timezone)
            .strftime("%-I:%M%P %Z") %>

          <br />

          <%= link_to 'view full details',
            [current_scope, event],
            class: "button small" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
<%
  # TODO: come on...
  admin ||= false
  ra ||= false

  profile_path_name = :mentor
  profile_id = :id

  if admin or ra
    profile_path_name = :participant
    profile_id = :account_id
  end
%>

<li>
  <div class="grid__cell">
    <%= link_to team_preview.name, [current_scope, team_preview] %>
  </div>

  <div class="grid__cell">
    Co-mentors:

    <% if (mentors = team_preview.mentors - [profile]).any? %>
      <ul class="unstyled">
        <% mentors.each do |m| %>
          <li>
            <%= link_to m.full_name, send(
              "#{current_scope}_#{profile_path_name}_path",
              m.send(profile_id)
            ) %>
          </li>
        <% end %>
      </ul>
    <% else %>
      None
    <% end %>
  </div>
</li>

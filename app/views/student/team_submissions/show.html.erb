<h1 class="appy-title">
  <%= t("views.team_submissions.show.title", team_name: @team_submission.team.name) %>
</h1>

<%= render 'student/team_submissions/progress', submission: @team_submission %>

<div data-team-submissions class="team-submissions">
  <div class="team-submissions__row-left submissions-col">
    <div class="team-submissions__fixed-col">
      <%= render 'student/team_submissions/steps/team_photo',
        submission: @team_submission,
        uploader: @team_photo_uploader %>

      <%= render 'student/team_submissions/steps/affirm_integrity',
        submission: @team_submission %>
    </div>
  </div>

  <div class="team-submissions__row-center submissions-col">
    <%= render 'student/team_submissions/steps/app_description',
      submission: @team_submission %>

    <%= render 'student/team_submissions/steps/sustainable_development_goals',
      submission: @team_submission %>

    <div class="tabs">
      <ul class="tab-menu">
        <li class="tab-link active">
          <button
            role="button"
            class="tab-button"
            data-tab-id="tab--team_submission_pitch_video">
            Pitch
          </button>
        </li>

        <li class="tab-link">
          <button
            role="button"
            class="tab-button"
            data-tab-id="tab--team_submission_demo_video">
            Demo
          </button>
        </li>
      </ul>

      <div class="tab-content tab-content__showing" id="tab--team_submission_pitch_video">
        <%= render 'student/team_submissions/steps/pitch_video',
          submission: @team_submission %>
      </div>

      <div class="tab-content tab-content__hiding" id="tab--team_submission_demo_video">
        <%= render 'student/team_submissions/steps/demo_video',
          submission: @team_submission %>
      </div>
    </div>

    <%= render 'student/team_submissions/steps/screenshots',
      submission: @team_submission %>
  </div>

  <div class="team-submissions__row-right submissions-col">
    <div class="team-submissions__fixed-col">
      <%= render 'student/team_submissions/steps/technical_checklist',
        submission: @team_submission %>

      <%= render 'student/team_submissions/steps/source_code',
        submission: @team_submission %>

      <%= render 'student/team_submissions/steps/development_platform',
        submission: @team_submission %>

      <% if false # HIDE UNTIL Regional Competition Events EXIST %>
        <%= render 'student/team_submissions/steps/pitch_presentation',
          submission: @team_submission %>
      <% end %>

      <% if Division.for(@team_submission.team).senior? %>
        <%= render 'student/team_submissions/steps/business_plan',
          submission: @team_submission %>
      <% end %>
    </div>
  </div>
</div>

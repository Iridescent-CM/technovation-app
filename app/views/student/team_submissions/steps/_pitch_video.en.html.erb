<%= content_tag :div,
  class: 'card ajax-form',
  role: 'form',
  data: {
    ajax_form: true,
    object_name: "team_submission",
    update_url: send(
      "#{current_scope}_team_submission_path",
      submission,
      team_id: current_team.id
    ),
  } do %>

  <div class="card__heading submission-step__marketing">
    <span class="card__heading-text">
      Pitch Video
    </span>
    <button type="button" data-action="edit" class="appy-button">
      edit
    </button>
  </div>

  <div class="card__body">
    <%= content_tag :div,
      class: "ajax-form__static-input ajax-form-helper__static-mode",
      data: {
        display_for: "pitch_video_link",
      } do %>
      <% if submission.pitch_video_link %>
        <%= submission.embed_code(:pitch_video_link).html_safe %>
      <% else %>
        Post the link to your pitch on Youtube or Vimeo!
      <% end %>
    <% end %>

    <div class="ajax-form-helper__edit-mode">
      <%= text_field_tag :pitch_video_link,
        submission.pitch_video_link,
        data: {
          validate_input: "(?:youtube|vimeo)\.com",
          validation_msg: "Must be a youtube or vimeo URL",
          use_response: "pitch_embed",
        },
        placeholder: 'Youtube or Vimeo URL'%>
    </div>
  </div>
<% end %>

<div class="ts-about-team simple-card">
  <%= direct_upload_form_for uploader, html: { class: 'fancy-upload' } do |f| %>

    <% if current_team.team_photo.present? %>
      <%= link_to nil,
        class: "ts-about-team__photo",
        data: { uploader: true },
        style: "background-image: url(#{current_team.team_photo_url})" do %>

        <div class="ts-about-team__edit-photo-text">
          Edit Team Photo
          <%= fa_icon("camera") %>
        </div>
      <% end %>
    <% else %>
      <%= link_to nil,
        class: "ts-about-team__photo ts-about-team__photo--no-photo",
        data: { uploader: true },
        style: "background-image: url(#{current_team.team_photo_url})" do %>

        <div class="ts-about-team__edit-photo-text">
          Add Team Photo
          <%= fa_icon("camera") %>
        </div>

      <% end %>
    <% end %>

    <%= f.file_field :team_photo, data: { fancy: true } %>
    <%= f.submit t("views.application.save"), class: "appy-button" %>
  <% end %>

  <div class="ts-about-team__name">
    <%= current_team.name %>
  </div>

  <div class="ts-about-team__description">
    <%= current_team.description %>
  </div>

  <%= link_to "Go To Your Team Page",
    student_team_path(current_team),
    class: "ts-about-team__team-quick-link" %>
</div>

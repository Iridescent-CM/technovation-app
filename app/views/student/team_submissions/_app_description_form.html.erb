<%= simple_form_for send("#{current_scope}_team_submission_path",
                         submission) do |f| %>
  <%= hidden_field_tag :team_id, current_team.id %>

  <%= render 'errors', record: @team_submission %>

  <%= f.input :app_description,
              label: t("models.team_submission.app_description") %>

  <span data-word-count-show='true'>
    Words: <%= (@team_submission.app_description || "").scan(/\S+/).count %>
  </span>

  <p class="appy-hint">
    <%= t("views.team_submissions.form.app_description_help") %>
  </p>

  <%= f.button :submit, t("views.application.continue"), class: "appy-button" %>
<% end %>

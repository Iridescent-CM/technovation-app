<%= simple_form_for send("#{current_scope}_team_submissions_path",
                         @team_submission,
                         team_id: current_team.id) do |f| %>
  <%= render 'errors', record: @team_submission %>

  <%= f.input :integrity_affirmed, as: :boolean, label: t("models.team_submission.integrity_affirmed") %>

  <%= f.button :submit, t("views.application.continue"), class: "appy-button" %>
<% end %>

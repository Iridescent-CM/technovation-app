<%= content_tag :div,
  class: 'submission-screenshots-edit',
  id: 'submission-screenshots-edit',
  data: {
    object_name: "team_submission",
    update_url: send(
      "#{current_scope}_team_submission_path",
      submission,
      team_id: current_team.id
    ),
  } do %>

  <ul id="edit-screenshots-wrapper">
    <%= render partial: 'screenshots/screenshot',
      collection: submission.screenshots,
      locals: { edit: true } %>
  </ul>
<% end %>

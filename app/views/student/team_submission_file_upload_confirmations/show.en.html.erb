<% provide :js, javascript_packs_with_chunks_tag('job_process') %>
<% provide :css, stylesheet_packs_with_chunks_tag('job_process') %>

<div class="grid grid--justify-space-around">
  <div class="grid__col-8">
    <div class="panel">
      <p class="notify-banner notify-banner--success">
        Your file has been uploaded and will be linked soon!
        <strong>However, please note:</strong>
      </p>

      <p class="scent--strong">
        If you used any format besides .zip, .aia, .ppt, .pptx, or .pdf, your file will NOT be linked!
      </p>

      <center>
        <div id="job-process-app">
          <jp-template
            status-url="
              <%= send("#{current_scope}_job_status_path", @job.job_id) %>
            "
          ></jp-template>
        </div>
      </center>
    </div>
  </div>
</div>
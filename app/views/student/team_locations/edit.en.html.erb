<% provide :title, "Change your team location" %>

<% if current_profile.is_a? StudentProfile %>
  <div class="mx-auto w-full lg:w-1/2">
    <div class="tab-content tw-active">
      <%= render 'signups/location_fields', team_id: @team.id %>
    </div>
  </div>
<% else %>
  <div class="grid grid--justify-space-around">
    <div class="grid__col-sm-8 panel">
      <%= render 'signups/location_fields', team_id: @team.id %>
    </div>
  </div>
<% end %>

<h3 class="heading--page">View your Scores and Certificates</h3>

<div id="student-scores-tabs" class="tabs">
  <ul class="score-tabs-menu tab-menu">
    <% if @quarterfinals_scores.official.any? %>
      <li class="tab-link">
        <button
          class="tab-button"
          data-tab-id="quarterfinal"
        >Quarterfinals</button>
      </li>
    <% end %>

    <% if @quarterfinals_scores.unofficial.any? %>
      <li class="tab-link">
        <button
          class="tab-button"
          data-tab-id="unofficial"
        >Unofficial Quarterfinals</button>
      </li>
    <% end %>

    <% if @semifinals_scores.any? %>
      <li class="tab-link">
        <button
          class="tab-button"
          data-tab-id="semifinal"
        >Semifinals</button>
      </li>
    <% end %>

    <li class="tab-link">
      <button
        class="tab-button"
        data-tab-id="certificates"
      >Certificates</button>
    </li>
  </ul>

  <div class="score-tab-content content">
    <% if @quarterfinals_scores.official.any? %>
      <div class="score-tab tab-content" id="quarterfinal">
        <%= render "student/scores/scores",
          round: :quarterfinals,
          scores: @quarterfinals_scores.official %>
      </div>
    <% end %>

    <% if @quarterfinals_scores.unofficial.any? %>
      <div class="score-tab tab-content" id="unofficial">
        <%= render "student/scores/scores",
          round: :unofficial,
          scores: @quarterfinals_scores.unofficial %>
      </div>
    <% end %>

    <% if @semifinals_scores.any? %>
      <div class="score-tab tab-content" id="semifinal">
        <%= render "student/scores/scores",
          round: :semifinals,
          scores: @semifinals_scores %>
      </div>
    <% end %>

    <div class="score-tab tab-content" id="certificates">
      <h2>Congratulations on all your hard work!</h2>

      <p>
        Thank you for taking the lead in changing your community for the better.
      </p>

      <p>
        Your participation in our program is truly valued and we wish you the
        best in your future endeavor!
      </p>

      <%= image_tag "certificates-congrats.svg", width: 500 %>

      <div class="certificates-btn-wrapper">
        <%= link_to "View your certificate",
          current_student.certificates.completion.current.last.file_url,
          target: "_blank",
          class: "certificates-btn" %>
      </div>
    </div>
  </div>
</div>
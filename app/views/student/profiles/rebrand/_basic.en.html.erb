<div id="basic-info" class="h-auto mb-auto rounded-md border-solid border-4 border-energetic-blue" >
  <div class="sm-header-wrapper ">
    <p class="font-bold">Basic Information</p>
  </div>

  <div id="information-wrapper" class="p-6 flex flex-col-reverse lg:flex-row lg:justify-between">
    <div id="information-details">
      <dl>
        <dt>Name</dt>
        <dd><%= current_student.full_name %></dd>

        <dt>School name</dt>
        <dd><%= current_student.school_name %></dd>

        <dt>Birthdate</dt>
        <dd><%= current_student.date_of_birth.strftime("%B %e, %Y") %></dd>

        <dt>Team divisions depend on your age on this date</dt>
        <dd><%= Division.cutoff_date.strftime("%B %e, %Y") %></dd>

        <dt>Your age today</dt>
        <dd><%= current_student.age %></dd>

        <dt>Your age on <%= Division.cutoff_date.strftime("%B %e, %Y") %></dt>
        <dd><%= current_student.age_by_cutoff %></dd>
      </dl>

      <p>
        <%= link_to "Change your basic profile details",
                    edit_profile_path,
                    class: "tw-green-btn" %>
      </p>

    </div>

    <div id="profile-picture" class="flex flex-col items-center self-start mb-4">
      <div>
        <%= filestack_image current_student.profile_image_url, transform: filestack_transform.resize(width: 100, height: 100) %>
      </div>

      <div>
        <%= form_with model: current_student do |form| %>
          <%= form.fields_for :account do |a| %>
            <%= a.filestack_field :profile_image,
                                  "Change Image",
                                  id: "profile-image-filepicker",
                                  pickerOptions: {
                                    uploadConfig: {
                                      intelligent: true,
                                    },
                                    storeTo: {
                                      location: "s3",
                                      container: ENV.fetch("AWS_BUCKET_NAME"),
                                      path: "uploads/account/profile_image/#{current_student.account_id}/",
                                      region: "us-east-1"
                                    }
                                  } %>
          <% end %>
          <%= form.submit "Save photo", class: 'tw-green-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

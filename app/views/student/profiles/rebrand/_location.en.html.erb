<div id="location" class="tw-blue-lg-container" >
  <div class="sm-header-wrapper ">
    <p class="font-bold">Your Region</p>
  </div>

  <div id="location-wrapper" class="p-6">
    <div id="location-details" class="flex-col space-y-6">
      <div class="mb-8">
        <p class="font-bold">Your Location</p>
        <p><%= current_student.address_details %></p>
      </div>

      <p>
        <%= link_to "Change your location",
          student_location_details_path(
            return_to: student_profile_path(anchor: '!location')
          ),
          class: "tw-green-btn disabled" %>
      </p>
    </div>
  </div>
</div>

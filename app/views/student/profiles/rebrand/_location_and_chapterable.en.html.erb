<div id="location-and-chapterable" class="tw-blue-lg-container">
  <div class="sm-header-wrapper">
    <p class="font-bold">Your Location and Assignment</p>
  </div>

  <div class="p-6">
    <div id="location-wrapper">
      <div id="location-details" class="flex-col space-y-6">
        <div class="mb-8">
          <% if current_account.valid_address? %>
            <p class="font-bold">Your current location</p>
            <p><%= current_student.address_details %></p>
          <% else %>
            <p class="font-bold">Your don't have a location set yet</p>
          <% end %>
        </div>

        <p>
          <%= link_to current_account.valid_address? ? "Change your location" : "Set your location",
            student_location_details_path(
              return_to: student_profile_path(anchor: '!location')
            ),
            class: "tw-green-btn"
          %>
        </p>
      </div>
    </div>

    <div class="mt-8">
      <p class="font-bold">
        Your current <%= current_account.assigned_to_chapter? ? "chapter" : "club" %>
      </p>

      <% if current_account.assigned_to_chapterable? %>
        <p><%= current_account.current_chapterable_assignment.chapterable.name.presence || "Name not set" %></p>

        <div class="mt-8">
          <%= link_to "Change your #{current_account.assigned_to_chapter? ? "chapter" : "club"}",
            new_chapterable_account_assignments_path,
            class: "tw-green-btn"
          %>
        </div>
      <% else %>
        <p>You are not assigned to a Chapter or Club</p>
      <% end %>
    </div>
  </div>
</div>

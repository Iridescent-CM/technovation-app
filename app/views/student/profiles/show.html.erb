<% provide :title, "My profile" %>

<% if !current_account.parental_consent&.signed? || !current_account.valid_address? %>
  <% content_for :notifications do %>
    <%= render "student/profiles/welcome_message_with_required_steps" %>
  <% end %>
<% end %>

<div class="container mx-auto flex flex-col lg:flex-row justify-center gap-6 profile-tab-container">
  <%= render "student/profiles/menu" %>

  <div class="tab">
    <div id="basic-tab-content" class="tab-content tw-active">
      <%= render "student/profiles/basic" %>
    </div>

    <div id="parent-tab-content" class="tab-content">
      <%= render "student/profiles/parent" %>
    </div>

    <div id="media-consent-tab-content" class="tab-content">
      <%= render "student/profiles/media_consent" %>
    </div>

    <div id="location-and-chapterable-tab-content" class="tab-content">
      <%= render "profiles/location_and_chapterable" %>
    </div>

    <div id="email-tab-content" class="tab-content">
      <%= render "student/profiles/email" %>
    </div>

    <div id="pw-tab-content" class="tab-content">
      <%= render "student/profiles/password" %>
    </div>
  </div>
</div>

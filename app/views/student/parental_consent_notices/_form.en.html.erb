<%= simple_form_for current_student,
  url: [:student, :parental_consent_notice],
  method: :post do |f| %>
  <%= render 'signups/student_profile_parental_fields', f: f %>

  <%= f.button :submit,
    t("views.student.parental_consent_notices.form.submit"),
    class: "button" %>

  <% unless current_page?(student_dashboard_path) %>
    or

    <%= link_to 'cancel', params[:back] || student_dashboard_path %>
  <% end %>
<% end %>
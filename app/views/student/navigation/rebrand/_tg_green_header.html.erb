<div class="tg-green-stripes rubik h-auto mx-auto pt-16 flex flex-col mb-8">
  <div class="banner-text-wrapper w-full lg:w-3/4 mx-auto pb-16">
    <div class="text-white text-4xl md:text-6xl font-black mb-8 uppercase">
      Technovation Girls <%= current_account.current_chapter.name.presence %>
    </div>
    <div class="text-white text-3xl font-bold mb-8">
      <span id="cha-student-meet" class="cursor-pointer hover:text-energetic-blue">
          Meet your Chapter Ambassador &#8227;
      </span>
    </div>
    <% if current_account.current_chapter.present? %>
      <%= render partial: 'dashboards/rebrand/chapter_ambassador_chapter_intro',
        locals: { chapter: current_account.current_chapter } %>
    <% else %>
      <%= render 'dashboards/rebrand/chapter_ambassador_missing' %>
    <% end %>
  </div>

  <%= render 'student/navigation/rebrand/tg_sub_nav' %>
</div>

<h2 class="mb-4 text-3xl font-thin text-gray-700">
  <%= submission.team.name %>
</h2>

<div class="flex items-end">
  <div>
    <%= image_tag submission.team.photo_url, class: "w-32 h-auto rounded-tl-md rounded-tr-4xl rounded-bl-4xl rounded-br-md" %>
  </div>

  <div class="pl-4">
    <strong class="text-sm font-bold">
      <%= submission.team.division.name.titleize %> Division
    </strong>

    <div class="flex items-center text-sm my-1">
      <svg class="mr-1 h-5 w-5 shrink text-energetic-blue" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
      </svg>

      <%= submission.team.primary_location %>
    </div>

    <div class="flex items-center text-sm">
      <svg class="mr-1 h-5 w-5 shrink text-energetic-blue" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>

      <%=
        [
          submission.development_platform,
          submission.development_platform_other
        ].delete_if(&:blank?).join(" - ")
      %>
    </div>
  </div>
</div>

<div class="border-b-2 border-energetic-blue my-8 mb-6"></div>

<h2 class="mb-2 text-3xl font-thin text-gray-700">
  <%= submission.app_name %>
</h2>

<%= simple_format submission.app_description, class: "mt-3 space-y-6 text-base text-gray-600" %>

<div class="border-b border-gray-200 mt-8"></div>

<div>
  <div class="mt-6">
    <h3 class="mb-2 text-base font-semibold uppercase">
      Videos
    </h3>

    <ul>
      <li>
        <%= link_to submission.pitch_video_link, class: "text-energetic-blue hover:text-energetic-blue text-lg", target: :_blank do %>
          <div class="flex items-center">
            <svg class="mr-2 h-6 w-6 shrink" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>

            <div>
              Watch the pitch video
            </div>

            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      </li>

      <li>
        <%= link_to submission.demo_video_link, class: "text-energetic-blue hover:text-energetic-blue text-lg", target: :_blank do %>
          <div class="flex items-center">
            <svg class="mr-2 h-6 w-6 shrink" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>

            <div>
              Watch the <%= t("submissions.demo_video") %>
            </div>

            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      </li>
    </ul>
  </div>

  <div class="mt-6">
    <h3 class="mb-2 text-base font-semibold uppercase">
      Technical Elements
    </h3>

    <ul>
      <li>
        <%= link_to link_to_download_or_open_project(submission), class: "text-energetic-blue hover:text-energetic-blue text-lg", target: :blank do %>
          <div class="flex items-center">
            <svg class="mr-2 h-6 w-6 shrink" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>

            <div>
              <%= submission.source_code_url.present? ? "Download the technical work" : "Open project" %>
            </div>

            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      </li>
    </ul>
  </div>

  <% if submission.team.division.name != "beginner" %>
    <div class="mt-6">
      <h3 class="mb-2 text-base font-semibold uppercase">
        Entrepreneurship
      </h3>

      <ul>
        <li>
          <%= link_to submission.business_plan_url, class: "text-energetic-blue hover:text-energetic-blue text-lg", target: :blank do %>
            <div class="flex items-center">
              <svg class="mr-2 h-6 w-6 shrink" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>

              <div>
                Read the <%= submission.senior_division? ? t("submissions.business_plan") : "user adoption plan" %>
              </div>

              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>

  <div class="mt-6">
    <h3 class="mb-2 text-base font-semibold uppercase">
      Regional Pitch Events
    </h3>
    <ul>
      <li>
        <% if submission.team.live_event? %>
          <% if submission.pitch_presentation_url.present? %>
            <%= link_to submission.pitch_presentation_url, class: "text-energetic-blue hover:text-energetic-blue text-lg", target: :blank do %>
              <div class="flex items-center">
                <svg class="mr-2 h-6 w-6 shrink" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>

                <div>
                  See the presentation slides
                </div>

                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
            <% end %>
          <% else %>
            You haven't uploaded your pitch presentation slides yet
          <% end %>
        <% else %>
          Virtual judging teams do not upload presentation slides
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="mt-6">
  <%= render "application/templates/content_well" do %>
    <h3 class="mb-2">Learning Journey</h3>
    <div class="ml-4">
      <p class="text-base font-medium">Learning Journey</p>
      <%= simple_format submission.learning_journey, class: "mb-3 space-y-6 text-base text-gray-600" %>

      <% if submission.team.division.name != "beginner" %>
        <p class="text-base font-medium">Information Legitimacy Description</p>
        <%= simple_format submission.information_legitimacy_description, class: "mb-3 space-y-6 text-base text-gray-600" %>

        <p class="text-base font-medium">Bibliography</p>
        <%= link_to "View your bibliography",
          submission.bibliography_url,
          class: "text-energetic-blue hover:text-energetic-blue text-base",
          target: "_blank" %>
      <% end %>
    </div>

    <h3 class="mb-2 mt-8">Ethics</h3>
    <%= simple_format submission.ethics_description, class: "mb-3 space-y-6 text-base text-gray-600" %>

    <div class="mt-8 flex flex-wrap gap-8">
      <% submission.screenshots.each do |screenshot| %>
        <% if screenshot.image_url.present? %>
          <div class="w-full lg:w-1/6 h-64 p-4 flex flex-col justify-center items-center">
            <%= image_tag screenshot.image_url, class: "object-cover h-full w-full rounded-sm border border-gray-200 shadow-sm" %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<% if current_account.authenticated? && current_account.is_not_a_judge? %>
  <div class="mt-8">
    <%= render "application/templates/alerts/info" do %>
      Judges will not see the answers to the following questions and they will <strong class="font-semibold">NOT</strong> affect your judge scores
    <% end %>
  </div>

  <% additional_question_labels(submission).each do |question_label| %>
    <div class="mt-6">
      <h3 class="mb-2 text-base font-semibold uppercase">
        <%= t("submissions.#{question_label}_question") %>
      </h3>

      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
        <%= humanize_boolean(eval("submission.#{question_label}")) %>
      </span>

      <%= simple_format eval("submission.#{question_label}_description"), class: "mt-3 space-y-6 text-base text-gray-600" %>
    </div>
  <% end %>
<% end %>

<% provide :title, "Submission: Technical Elements" %>

<% provide :back_link_txt, "Pitch" %>
<% provide :back_link, send(
  "#{current_scope}_team_submission_section_path",
  @team_submission,
  section: :pitch
) %>

<% provide :next_link_txt, "Entrepreneurship" %>
<% provide :next_link, send(
  "#{current_scope}_team_submission_section_path",
  @team_submission,
  section: :business
) %>

<%= render 'team_submissions/pieces/piece',
  submission: @team_submission,
  title: "Coding Language",
  scope: current_scope,
  attribute: :development_platform,
  cta_when_empty: "Select your coding language",
  cta_when_filled: "Change your selection" do %>
  <p>
    <%= @team_submission.development_platform %>
    <% if @team_submission.developed_on?("Other") %>
      <span>
        - <%= @team_submission.development_platform_other %>
      </span>
      <p>
        URL:
        <%= link_to @team_submission.development_platform_other_url,
        @team_submission.development_platform_other_url %>
      </p>
    <% end %>
  </p>

  <% if @team_submission.development_platform_requires_project_url? %>
    <p>
      <% if @team_submission.development_platform_project_url.present? %>
        Project url:
        <%= link_to @team_submission.development_platform_project_url,
                    @team_submission.development_platform_project_url %>
      <% else %>
        You have not added your project url
      <% end %>
    </p>
  <% elsif @team_submission.developed_on?("App Inventor") %>
    <p class="mt-4">
      <strong class="font-bold">App Inventor Project Name</strong><br>
      <%= @team_submission.app_inventor_app_name %>
    </p>
  <% end %>

  <% if @team_submission.junior_division? || @team_submission.senior_division? %>
    <br>
    <dl>
      <dt>
        Did you use AI to help with your coding and/or to help you build your machine learning model?
      </dt>
      <dd>
        <%= humanize_boolean(@team_submission.ai_usage) %>
      </dd>
    </dl>
  <% end %>
<% end %>

<%= render 'application/templates/tw_thick_rule'%>

<%= render 'team_submissions/pieces/piece',
  submission: @team_submission,
  title: "Technical Additions",
  scope: current_scope,
  attribute: :source_code_url,
  cta_when_empty: "Upload your technical work",
  cta_when_filled: "Change your upload" do %>
  <% if @team_submission.development_platform_requires_project_url? %>
    <p>
      <% if @team_submission.development_platform_project_url.present? %>
        Project url:
        <%= link_to @team_submission.development_platform_project_url,
          @team_submission.development_platform_project_url %>
      <% else %>
        You have not added your project url
      <% end %>
    </p>
  <% else %>
    <p>
      Your team has uploaded:
      <%= link_to @team_submission.source_code_filename,
        @team_submission.source_code_url %>
    </p>
  <% end %>
<% end %>

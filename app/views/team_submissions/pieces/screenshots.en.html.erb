<% provide :title, "Images" %>

<div
  id="screenshots"
>

  <div id="vue-screenshot-uploader">
    <screenshot-uploader
      screenshots-url="<%= send("#{current_scope}_screenshots_path") %>"
      :team-id="<%= @team_submission.team_id %>"
      :team-submission-id="<%= @team_submission.id %>"
      sort-url="<%=
        send(
          "#{current_scope}_team_submission_path",
          @team_submission
        )
      %>"
    ></screenshot-uploader>
  </div>

  <p class="py-2">
    Note: Click on an image to view it full-size.
  </p>
  <p class="py-2">
    Review the
    <a href="https://technovationchallenge.org/submission-guidelines/" target="_blank" class="tw-link">submission guidelines</a>
    for recommendations.
  </p>
</div>

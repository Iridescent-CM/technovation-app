<% provide :title, t("submissions.demo_video").titleize %>


  <%= form_with(
    model: @team_submission,
    url: send("#{current_scope}_team_submission_path"),
    local: true,
    data: { turbo: false }
  ) do |f| %>
    <%= hidden_field_tag :piece, piece_name %>

    <div class="field">
      <%= f.label :demo_video_link, "Youtube, Vimeo, or Youku URL", for: :team_submission_demo_video_link %>
      <%= f.text_field :demo_video_link,
        id: :team_submission_demo_video_link,
        value: params[:value] || @team_submission.send(piece_name) %>
    </div>

    <div class="submission-actions">
      <p class="btn-wrapper">
        <%= f.submit "Next", class: "tw-green-btn cursor-pointer" %>
        or
        <%= link_to "cancel",
        send("#{current_scope}_team_submission_section_path", @team_submission, section: @submission_section) %>
      </p>
    </div>
  <% end %>

  <p class="py-2">
    Get some help making your <%= t("submissions.demo_video") %> in the

    <%= link_to(
      "Beginner",
      "https://technovationchallenge.org/courses/beginner-division-curriculum/lessons/planning-your-videos/",
      target: "_blank",
      class: "tw-link"
    ) %>

    or

    <%= link_to(
      "Junior/Senior",
      "https://technovationchallenge.org/courses/senior-division-curriculum/lessons/outline-pitch-and-technical-videos/",
      target: "_blank",
      class: "tw-link"
    ) %>

    curriculum units.
  </p>

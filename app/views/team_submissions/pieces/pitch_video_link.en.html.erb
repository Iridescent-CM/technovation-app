<div class="panel">
  <h3 class="panel--heading">Pitch Video</h3>

  <%= form_with(
    model: [current_scope, @team_submission],
    local: true
  ) do |f| %>
    <%= hidden_field_tag :piece, piece_name %>

    <div class="field">
      <%= f.label :pitch_video_link, "Youtube, Vimeo, or Youku URL" %>
      <%= f.text_field :pitch_video_link,
        id: :team_submission_pitch_video_link %>
    </div>

    <div class="actions">
      <p>
        <%= f.submit "Save this pitch video link", class: "button" %>
        or
        <%= link_to "cancel",
          [
            current_scope,
            @team_submission,
            :section,
            section: @submission_section,
          ] %>
      </p>
    </div>
  <% end %>

  <p class="grid__cell--padding-sm-y">
    Get some help making your pitch video in the

    <%= link_to(
      "pitch video curriculum unit.",
      "http://technovationchallenge.org/curriculum/pitch-1/",
      target: "_blank"
    ) %>
  </p>
</div>

<div class="panel">
  <h3 class="panel--heading">
    App name
  </h3>

  <%= form_with(
    model: [current_scope, @team_submission],
    local: true
  ) do |f| %>
    <%= hidden_field_tag :piece, piece_name %>

    <div class="field">
      <%= f.label :app_name, "Your app's name" %>
      <%= f.text_field :app_name, id: :team_submission_app_name %>
    </div>

    <div class="actions">
      <p>
        <%= f.submit "Save this name", class: "button" %>
        or
        <%= link_to "cancel", [current_scope, @team_submission] %>
      </p>
    </div>
  <% end %>
</div>

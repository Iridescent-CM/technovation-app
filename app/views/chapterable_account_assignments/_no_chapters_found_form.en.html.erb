<%= simple_form_for @chapterable_assignment do |f| %>
  <%= hidden_field_tag "chapterable", "none_available" %>

  <% if current_account.is_a_mentor? %>
    <%= render "chapterable_account_assignments/mentor/extra_form_fields" %>
  <% end %>

  <%= f.submit "Acknowledge and Go To Dashboard", class: "tw-green-btn cursor-pointer mt-8" %>
<% end %>

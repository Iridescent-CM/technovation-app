<div class="flex mb-4">
  <div class="mr-6">
    <%= radio_button_tag "chapterable", [chapterable.id, chapterable.class.name] %>
  </div>

  <div>
    <%= label_tag "chapterable__#{chapterable.id}___#{chapterable.class.name}_",
      style: "text-transform: none; letter-spacing: 0; font-size: inherit; font-weight: inherit;" do %>

      <div class="font-bold text-xl">
        <%= chapterable.name.presence || chapterable.organization_name %>
      </div>

      <% if chapterable.primary_contact.present? %>
        <div class="text-sm leading-snug">
          <%= chapterable.primary_contact.full_name %>
        </div>
      <% end %>

      <div class="text-sm leading-snug">
        <%= chapterable.location %>
      </div>
    <% end %>
  </div>
</div>

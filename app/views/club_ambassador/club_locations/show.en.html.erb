<div class="container mx-auto flex flex-col lg:flex-row justify-around gap-6 w-full lg:w-3/4">
  <%= render "club_ambassador/club_profile/side_nav" %>

  <%= render layout: "application/templates/dashboards/energetic_container", locals: { heading: "Location Details" } do %>
    <div>
      <% if current_chapterable.present? %>
        <p class="mb-4">This information will be publicly visible to students, mentors, and visitors to the Technovation website.</p>

        <div class="ml-8">
          <p class="font-semibold">Headquarters Location</p>
          <p class="text-sm italic">
            The city entered for the headquarters will be used to map the location of your club.
          </p>
          <p class="mb-4"><%= current_chapterable.headquarters_location.presence || "Not set" %></p>

          <div class="w-full lg:w-1/3 flex mt-8 mx-auto">
            <%= link_to "Update headquarters",
              edit_club_ambassador_club_headquarters_location_path,
              class: "tw-green-btn mx-auto text-center" %>
          </div>

          <div class="pt-16">
            <p class="font-semibold">Location Served by Club</p>
            <p class="mb-2">
              Your Club is currently serving this location:

              <span class="font-medium">
                <%= "#{current_chapterable.address_details}" %>
              </span>
            </p>

            <div class="w-full lg:w-1/3 flex mt-8 mx-auto">
              <%= link_to "Update club location",
                edit_club_ambassador_club_location_path(
                  return_to: club_ambassador_club_location_path
                ),
                class: "tw-green-btn mx-auto text-center" %>
            </div>
          </div>
        </div>
      <% else %>
        <p>You are not associated with a club. Please contact <%= mail_to ENV.fetch("HELP_EMAIL") %> for support.</p>
      <% end %>
    </div>
  <% end %>
</div>

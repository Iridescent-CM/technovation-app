<div class="container mx-auto flex flex-col lg:flex-row justify-around gap-6 w-full lg:w-3/4">
  <%= render "club_ambassador/club_profile/side_nav" %>

  <%= render layout: "application/templates/dashboards/energetic_container", locals: { heading: "Public Info" } do %>

    <div>
      <p class="mb-4">This information will be publicly visible to students, mentors, and visitors to the Technovation website.</p>

      <div class="ml-8">
        <p class="font-semibold">Club Name</p>
        <p class="mb-4"><%= current_club.name.presence || "Not set" %></p>

        <p class="font-semibold">Program Summary</p>
        <p class="mb-4"><%= current_club.summary.presence || "Not set" %></p>

        <p class="font-semibold">Primary Contact Visibility</p>
        <%= current_club.primary_contact&.full_name.presence || "Please select a primary contact" %>
        <p class="text-sm italic mb-4">This Club Ambassador is the primary contact displayed to students and mentors</p>

        <p class="font-semibold">Public Map Visibility</p>
        <p>
          This club <%= current_club.visible_on_map? ? "is" : "is not" %>
          displayed on the map of clubs on the Technovation website
        </p>
      </div>

      <div class="w-full lg:w-1/3 flex mt-8 mx-auto">
        <%= link_to "Update club public info",
          edit_club_ambassador_public_information_path,
          class: "tw-green-btn mx-auto" %>
      </div>
    </div>
  <% end %>
</div>

<% provide :title, "Reset your password" %>
<% provide :main_header, render("application/templates/tg_green_header", heading: "Welcome Back") %>
<% provide :global_nav_links, render("application_rebrand/global_nav_links") %>

<div class="w-11/12 lg:w-1/2 mx-auto">
  <%= render layout: "application/templates/dashboards/energetic_container", locals: {heading: t("views.password_resets.new.title")} do %>

    <%= simple_form_for(@password) do |f| %>
      <%= f.hidden_field :token %>

      <%= f.input :password, label: t("models.account.password") %>

      <p class="hint margin--t-medium-negative">
        <%= t("models.account.password_hint") %>
      </p>

      <%= f.input :password_confirmation, label: t('views.signups.form.confirm_password') %>

      <%= f.button :submit,
        t("views.application.save"),
        class: "tw-green-btn my-8 cursor-pointer" %>
    <% end %>
  <% end %>
</div>

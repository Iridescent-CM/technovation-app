<h1 class="appy-title">Detailed Scores for <%= @team.name %></h1>

<label>
  Judging round:

  <%= select_tag :round,
    options_for_select(SubmissionScore.rounds.keys - %w{finals}, params[:round]),
    data: { reload: true } %>
</label>

<p style="padding: 0; margin: 0 0 1rem;">
  <strong>Division:</strong>
  <%= @team.division_name %> |

  <strong>App:</strong>
  <%= @team_submission.app_name || "No name" %> |

  <strong>Average score:</strong>
  <%= @team_submission.public_send("#{params[:round]}_average_score") %>
</p>

<% if current_account.admin_profile %>
  <p style="padding: 0; margin: 0 0 1rem;">
    <%= link_to "Edit the submission",
      edit_admin_team_submission_path(@team_submission) %>
  </p>
<% end %>

<p style="padding: 0; margin: 0 0 1rem;">
  <%= link_to 'back', send("#{current_scope}_scores_path",
                           event: @event.id,
                           division: @team.division_name) %>
</p>

<% if @scores.empty? %>
  <p>
    No completed scores are available for this submission.
  </p>
<% else %>
  <div id="ra-scores-detail" class="flex-row tabs tabs--vertical">
    <ul class="flex-col-md-3 tabs__menu">
      <% @scores.each do |score| %>
        <li class="tabs__menu-link">
          <button
            role="button"
            class="tabs__menu-button"
            data-tab-id="ra-scores-score-<%= score.id %>">
            <%= score.judge_profile.full_name %><br />
            <small style="color: #999; font-style: italic;">
              <%= score.event_type %> event -
              Scored <%= score.total %> / <%= score.total_possible %>
            </small>
          </button>
        </li>
      <% end %>
    </ul>

    <div class="tabs__content flex-col-md-9">
      <% @scores.each do |score| %>
        <div class="tabs__tab-content" id="ra-scores-score-<%= score.id %>">
          <%= render 'regional_ambassador/scores/detail_summary',
            score: score,
            team: @team %>

          <h3>Breakdown</h3>

          <div class="score-section" id="score-section-ideation">
            <%= render 'regional_ambassador/scores/detail/ideation', score: score %>
          </div>

          <div class="score-section" id="score-section-technical">
            <%= render 'regional_ambassador/scores/detail/technical', score: score %>
          </div>

          <% if @team.division.senior? %>
            <div class="score-section" id="score-section-entrepreneurship">
              <%= render 'regional_ambassador/scores/detail/entrepreneurship', score: score %>
            </div>
          <% end %>

          <div class="score-section" id="score-section-pitch">
            <%= render 'regional_ambassador/scores/detail/pitch', score: score %>
          </div>

          <div class="score-section" id="score-section-overall">
            <%= render 'regional_ambassador/scores/detail/overall', score: score %>
          </div>
        </div>
      <% end %>
    </div>
<% end %>

<% unless current_ambassador.approved? %>
  <h1 class="appy-title dashboard__heading">
    <%= t("views.application.dashboard") %>
  </h1>

  <p class="appy-subtitle">
    <%= t("views.regional_ambassador.dashboards.show.#{current_ambassador.status}_message") %>
  </p>
<% end %>

<% if current_ambassador.full_access_enabled? %>
  <%= render "regional_ambassador/dashboards/#{current_ambassador.status}_show" %>
<% else %>
  <%= render 'regional_ambassador/dashboards/completion_steps' %>
<% end %>

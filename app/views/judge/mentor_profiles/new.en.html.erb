<%= simple_form_for @mentor_profile, url: judge_mentor_profile_path do |f| %>
  <h1 class="appy-title">Create a Mentor Profile</h1>

  <%= f.input :school_company_name %>
  <%= f.input :job_title %>

  <%= f.input :bio %>

  <%= f.input :accepting_team_invites,
    label: t("models.mentor_profile.accepting_team_invites") %>

  <%= f.input :virtual, label: t("models.mentor_profile.virtual") %>

  <h4><%= t('views.signups.form.skills_and_interests_html') %></h4>

  <%= f.collection_check_boxes :expertise_ids, @expertises, :id, :name do |b| %>
    <span class="inline-checkbox">
      <%= b.check_box %><%= b.label { b.text } %>
    </span>
  <% end %>

  <%= f.submit class: "appy-button" %>
<% end %>

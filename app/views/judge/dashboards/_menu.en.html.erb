<ul class="tabs__menu">
  <% if SeasonToggles.judging_enabled_for?(current_judge) %>
    <% if quarterfinals? and current_judge.selected_regional_pitch_event.live? %>
      <li class="tabs__menu-link">
        <button
          role="button"
          class="tabs__menu-button"
          data-tab-id="scores">
          Live Event Scores
        </button>
      </li>
    <% end %>

    <li class="tabs__menu-link">
      <button
        role="button"
        class="tabs__menu-button"
        data-tab-id="virtual-scores">
        Virtual Scores
      </button>
    </li>
  <% end %>

  <li class="tabs__menu-link">
    <button
      role="button"
      class="tabs__menu-button"
      data-tab-id="pitch-events">
      Pitch Events
    </button>
  </li>
</ul>

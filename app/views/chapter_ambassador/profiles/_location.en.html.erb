<div id="location" class="tw-blue-lg-container" >
  <div class="sm-header-wrapper ">
    <p class="font-bold">Your Location</p>
  </div>

  <div id="location-wrapper" class="p-6">
    <div id="location-details" class="flex-col space-y-6">
      <div class="mb-8">
        <% if current_account.valid_address? %>
          <p class="font-bold">Your current location</p>
          <p><%= current_ambassador.address_details %></p>
        <% else %>
          <p class="font-bold">Your don't have a location set yet</p>
        <% end %>
      </div>

      <p>
        <%= link_to current_account.valid_address? ? "Change your location" : "Set your location",
          chapter_ambassador_location_details_path(
            return_to: chapter_ambassador_profile_path(anchor: '!location')
          ),
          class: "tw-green-btn"
        %>
      </p>
    </div>
  </div>
</div>

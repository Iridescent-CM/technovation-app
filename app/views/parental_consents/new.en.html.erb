<%= render 'consent' %>

<%= render 'errors', record: @parental_consent %>

<%= simple_form_for @parental_consent do |f| %>
  <%= f.input :student_profile_consent_token, as: :hidden %>

  <%= label_tag t("models.parental_consent.student_name") %>
  <%= text_field_tag :student_name, f.object.student_profile.full_name, disabled: true %>

  <%= f.input :electronic_signature %>

  <%= f.input :newsletter_opt_in,
    as: :boolean,
    label: "It's okay to send me a parent/guardian newsletter from Technovation every other month." %>

  <%= f.button :submit, t("views.parental_consents.new.submit"), class: "appy-button" %>
<% end %>

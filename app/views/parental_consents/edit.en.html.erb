<% provide :title, "Electronic consent form" %>

<div class="grid grid--justify-space-around">
  <div class="panel grid__col-sm-8">
    <%= render partial: "parental_consents/consent_status",
      locals: {
        parental_consent: @parental_consent,
        media_consent: @media_consent
      }
    %>

    <%= simple_form_for @parental_consent do |f| %>
      <%= render 'errors', record: @parental_consent %>

      <%= render 'consent' %>

      <%= f.input :student_profile_consent_token, as: :hidden %>

      <div class="disabled" style="margin: 2rem 0;">
        <strong>
          <%= label_tag t("models.parental_consent.student_name") %>
          <%= f.object.student_profile.full_name %>
        </strong>
      </div>

      <div style="margin: 2rem 0;">
        <%= f.input :electronic_signature,
          label: t("models.parental_consent.electronic_signature"),
          input_html: {
            placeholder: "Please type your name here as electronic consent",
          } %>

        <p>
          <%= f.input :newsletter_opt_in,
            as: :boolean,
            label: "It's okay for Technovation to send email to me (about every two months)." %>
        </p>
      </div>

      <p>
        <%= f.button :submit,
          t("views.parental_consents.new.submit"),
          class: "button" %>
      </p>
    <% end %>
  </div>
</div>

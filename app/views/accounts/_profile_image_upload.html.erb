<%= simple_form_for account, url: url, html: { class: "fancy-upload" } do |f| %>
  <%= f.input :profile_image, input_html: { data: { fancy: true } } %>

  <%= image_tag account.profile_image_url, width: 175 %>

  <%= link_to t("controllers.accounts.update.change_image"), '#',
              data: { uploader: true },
              class: "action-link secondary" %>
<% end %>

<%= direct_upload_form_for @uploader, html: { class: 'fancy-upload' } do |f| %>
  <%= link_to t("controllers.accounts.update.change_image"), '#',
              data: { uploader: true },
              class: "transparent-accent-button" %>

  <%= f.file_field :profile_image, data: { fancy: true } %>
  <%= f.submit t("views.application.save") %>
<% end %>

<%= simple_form_for [current_scope, @team_member_invite] do |f| %>
  <%= f.hidden_field :team_id %>

  <%= f.input :invitee_email,
    label: false,
    placeholder: t("views.team_member_invites.form.invite_by_email") %>

  <%= f.button :submit,
    t("views.application.invite"),
    class: "button small" %>
<% end %>

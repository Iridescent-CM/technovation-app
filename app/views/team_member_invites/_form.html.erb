<%= simple_form_for(@team_member_invite, url: send("#{current_scope}_team_member_invites_path")) do |f| %>
  <%= f.hidden_field :team_id %>

  <%= f.input :invitee_email,
    label: false,
    placeholder: t("views.team_member_invites.form.invite_by_email") %>

  <%= f.button :submit,
    t("views.application.invite"),
    class: "submit-button submit-button-neutral" %>
<% end %>

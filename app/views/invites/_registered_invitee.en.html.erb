<div class="grid">
  <div class="grid__col-2 grid__col--bleed-y">
    <%= image_tag invite.invitee.profile_image_url,
      class: "thumbnail-sm grid__cell-img" %>
  </div>

  <div class="grid__col-10 grid__col--bleed-y">
    <div class="grid__cell">
      <strong>
        <%= invite.invitee_first_name %>
        <%= invite.invitee_last_name %>
      </strong>
      <br>

      <%= link_to "view profile",
        send(
          "#{current_scope}_#{invite.invitee_scope_name}_path",
          invite.invitee_id,
          back_title: "Back to your team",
          back: send(
            "#{current_scope}_team_path",
            team,
            anchor: invite.invitee_scope_name.pluralize
          )
        ) %>

      <br>

      <%= link_to "delete this invitation",
        send("#{current_scope}_#{invite.invitee_scope_name}_path"),
        class: "danger small",
        data: {
          method: :delete,
          confirm: t("controllers.invites.destroy.confirm",
                      name: invite.invitee_name),
        } %>
    </div>
  </div>
</div>

<dt>Status for <%= Season.current.year %> Season</dt>
<dd>
  <%= chapterable.active? ? "Active" : "Inactive" %>

  <p>
  <% if chapterable.active? %>
    <%= link_to "Mark inactive",
      send("inactive_admin_#{chapterable.class.name.downcase}_status_path", chapterable),
      class: "button secondary small",
      data: {
        method: :patch,
        confirm: "This will mark #{chapterable.name.presence || chapterable.organization_name} inactive for the #{Season.current.year} season."
      } %>
    <% else %>
      <%= link_to "Mark active",
        send("active_admin_#{chapterable.class.name.downcase}_status_path", chapterable),
        class: "button secondary small",
        data: {
          method: :patch,
          confirm: "This will mark #{chapterable.name.presence || chapterable.organization_name} active for the #{Season.current.year} season."
        } %>
    <% end %>
  </p>
</dd>

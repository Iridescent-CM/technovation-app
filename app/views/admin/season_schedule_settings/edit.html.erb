<h1>Content & Settings</h1>
<h3>
  Toggle user features and content throughout the season
</h3>

<div id="admin-content-settings">
  <%= form_with(
        id: "season_schedule",
        scope: :season_toggles,
        url: admin_season_schedule_settings_path,
        local: true,
        method: :patch) do |f| %>

    <admin-content-settings
      cancel-button-url="<%= admin_dashboard_path %>"
      :form-data="{
        student_signup: <%= SeasonToggles.signup_enabled?('student') %>,
        mentor_signup: <%= SeasonToggles.signup_enabled?('mentor') %>,
        student_dashboard_text: '<%= SeasonToggles.dashboard_text('student') %>',
        mentor_dashboard_text: '<%= SeasonToggles.dashboard_text('mentor') %>',
        judge_dashboard_text: '<%= SeasonToggles.dashboard_text('judge') %>',
        regional_ambassador_dashboard_text: '<%= SeasonToggles
          .dashboard_text('regional_ambassador') %>',
        student_survey_link: {
          text: '<%= SeasonToggles.survey_link('student', :text) %>',
          url: '<%= SeasonToggles.survey_link('student', :url) %>',
          long_desc: '<%= SeasonToggles.survey_link('student', :long_desc) %>',
        },
        mentor_survey_link: {
          text: '<%= SeasonToggles.survey_link('mentor', :text) %>',
          url: '<%= SeasonToggles.survey_link('mentor', :url) %>',
          long_desc: '<%= SeasonToggles.survey_link('mentor', :long_desc) %>',
        },
        team_building_enabled: <%= SeasonToggles.team_building_enabled? %>,
        team_submissions_editable: <%= SeasonToggles.team_submissions_editable? %>,
        select_regional_pitch_event: <%= SeasonToggles.select_regional_pitch_event? %>,
        judging_round: '<%= SeasonToggles.judging_round.to_s %>',
        display_scores: <%= SeasonToggles.display_scores? %>,
      }"
    />

  <% end %>
</div>
<div class="admin-team-info">
  <div class="team-photo">
    <%= image_tag @team.team_photo_url, width: "100%" %>
  </div>

  <div class="team-info">
    <h3 class="team_name"><%= @team.name %></h3>

    <p class="team_division">
      <%= t("views.teams.show.division_name", name: @team.division_name.humanize) %>
    </p>

    <p class="team_location">
      <%= t("views.teams.show.location", name: @team.primary_location) %>
    </p>

    <p><%= link_to "Edit team location", edit_admin_team_location_path(@team) %></p>

    <p class="team_description"><%= @team.description.blank? ? "This team has not provided a summary" : @team.description %></p>

    <p><%= link_to t("controllers.teams.edit.link"), edit_admin_team_path(@team) %></p>
  </div>

  <div class="team-memberships">
    <%= render "admin/teams/member_list", team: @team %>
    <%= render "admin/teams/mentor_list", team: @team %>
  </div>

  <%= render 'admin/teams/debugging', team: @team %>
</div>

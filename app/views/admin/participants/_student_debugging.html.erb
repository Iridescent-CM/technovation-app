<div class="debug student-debug">
  <h3>Student Profile debugging info</h3>

  <p>
    <strong>Parental consent</strong>
    <%= profile.consent_signed? ? 'signed' : 'not signed' %>
  </p>

  <p>
    <strong>Browser / OS Info</strong>
    <%= [profile.browser_name,
         profile.browser_version,
         profile.os_name,
         profile.os_version].compact.join(' - ') %>
  </p>

  <% if not profile.team.present? %>
    <%= form_tag(send("#{current_scope}_team_memberships_path")) do %>
      <%= hidden_field_tag :account_id, profile.account_id %>

      <h6>Add <%= profile.full_name %> to a team</h6>

      <p>
        <%= select_tag "team_id",
            options_from_collection_for_select(Team.current, "id", "name"),
            prompt: "Select a team",
            required: true,
            class: "chosen" %>
      </p>

      <p>
        <%= submit_tag 'Add', class: "button" %>
      </p>
    <% end %>
  <% end %>
</div>

<div class="grid">
  <div class="grid__col-auto grid__col--bleed-x grid__col--bleed-y">
    <h3>
      Legal Contact
    </h3>

    <div class="panel">
      <% if chapter.legal_contact_full_name.present? %>
        <dl>
          <dt>Name</dt>
          <dd><%= chapter.legal_contact_full_name %></dd>

          <dt>Email</dt>
          <dd><%= chapter.legal_contact_email_address %></dd>

          <dt>Phone Number</dt>
          <dd><%= chapter.legal_contact_phone_number %></dd>

          <dt>Job Title</dt>
          <dd><%= chapter.legal_contact_job_title %></dd>
        </dl>

        <%= button_to "Send MOU",
          admin_chapter_memorandum_of_understanding_path(@chapter),
          method: "post",
          class: "button"
        %>
      <% else %>
        <%= simple_form_for chapter, url: admin_chapter_path(chapter), local: true do |f| %>
          <% if chapter.errors.any? %>
            <div class="notice notice--error">
              <ul class="reset">
                <% chapter.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :legal_contact_full_name, "Name" %>
            <%= f.text_field :legal_contact_full_name %>
          </div>

          <div class="field">
            <%= f.label :legal_contact_email_address, "Email" %>
            <%= f.text_field :legal_contact_email_address %>
          </div>

          <div class="field">
            <%= f.label :legal_contact_phone_number, "Phone Number" %>
            <%= f.text_field :legal_contact_phone_number %>
          </div>

          <div class="field">
            <%= f.label :legal_contact_job_title, "Job Title" %>
            <%= f.text_field :legal_contact_job_title %>
          </div>

          <div class="actions margin--t-xlarge">
            <%= f.submit "Save", class: "button" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

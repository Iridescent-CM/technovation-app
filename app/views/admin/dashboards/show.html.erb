<% provide :title, "Admin dashboard" %>

<h1>Technovation <%= Season.current.year %></h1>

<div id="admin-dashboard">
  <admin-dashboard
    :totals="{
      students: <%= number_with_delimiter @students.count %>,
      mentors: <%= number_with_delimiter @mentors.count %>,
    }"
    :chart-endpoints="{
      permitted_students: '<%= admin_data_analysis_path(:permitted_students) %>',
      returning_students: '<%= admin_data_analysis_path(:returning_students) %>',
      onboarding_mentors: '<%= admin_data_analysis_path(:onboarding_mentors) %>',
      returning_mentors: '<%= admin_data_analysis_path(:returning_mentors) %>',
    }"
  />
</div>
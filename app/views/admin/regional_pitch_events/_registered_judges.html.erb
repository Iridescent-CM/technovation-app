<%= turbo_frame_tag "registered-judges-frame" do %>
  <div class="grid grid--bleed">
    <div class="grid__col-auto" style="overflow-x: auto;">
      <h5>
        <span id=registered-judge-count>
          Judges (<%= event.judges.count %>)
        </span>
      </h5>

      <% if event.judges.any? %>
        <table class="table--hoverable" style="border-spacing: 0; width: 100%;">
          <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th style="padding: 4px 8px;">Status</th>
            <% if current_account.chapter_ambassador? %>
              <th style="padding: 4px 8px;">Actions</th>
            <% end %>
          </tr>
          </thead>

          <tbody>
            <% event.judges.each do |judge| %>
              <%= render "admin/regional_pitch_events/registered_judge", judge: judge, event: event %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No judges yet.</p>
      <% end %>
    </div>
  </div>
<% end %>

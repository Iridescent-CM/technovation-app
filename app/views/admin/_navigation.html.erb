<header class="admin-navigation" role="banner">
  <div class="admin-navigation__content-wrapper">
    <%= link_to image_tag("tc-logo-white-tm.png"),
                content_for?(:root_path) ? yield(:root_path) : application_dashboard_path,
                class: "logo" %>

    <nav>
      <ul class="admin-navigation__links-list">
        <li class="nav-link <%= al(admin_profiles_path) %>">
          <%= link_to "Accounts", admin_profiles_path %>
        </li>

        <li class="nav-link <%= al(admin_regional_ambassadors_path) %>">
          <%= link_to "Regional Ambassadors", admin_regional_ambassadors_path %>
        </li>

        <li class="nav-link <%= al(admin_teams_path) %>">
          <%= link_to "Teams", admin_teams_path %>
        </li>

        <li class="nav-link <%= al(admin_background_checks_path) %>">
          <%= link_to "Background Checks", admin_background_checks_path %>
        </li>

        <li class="nav-link <%= al(admin_signup_attempts_path) %>">
          <%= link_to "Signup Attempts", admin_signup_attempts_path %>
        </li>

        <li class="nav-link">
          <%= link_to "Logout", logout_path, data: { method: :delete } %>
        </li>
      </ul>

      <%= fa_icon("bars", class: "navigation__mobile-toggle", id: "mobile-menu-toggle") %>
    </nav>
  </div>
</header>

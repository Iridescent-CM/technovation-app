    <% end %>
  </head>

  <body>
    <div class="header-container">
      <%= yield :session_bar %>

      <%= render 'application/navigation' %>

      <%= yield :subnav %>
    </div>

    <div class="main-container">
      <%= render 'application/flash_messages' %>

      <%= yield %>

      <%= render 'application/footer' %>
    </div>


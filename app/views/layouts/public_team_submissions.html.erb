        heap.load("<%= ENV.fetch("HEAP_APP_ID") %>");

        <% if current_account.authenticated? && !current_session.authenticated? %>
          heap.identify("<%= current_account.id %>");
          heap.addUserProperties({"email": "<%= current_account.email %>"});
        <% end %>
      </script>
    <% end %>
  </head>

  <body>
    <%= render 'application/header' %>

    <div class="container">
      <div class="main-content">
        <%= yield %>
      </div>

      <footer id="site-footer">
        <p>
          Technovation Girls<br />

          <%= link_to t("views.application.terms_of_use"),
            "http://iridescentlearning.org/terms-of-use/" %>&nbsp;|

          <%= link_to t("views.application.privacy_policy"),
            "http://iridescentlearning.org/privacy-policy/" %>
        </p>
      </footer>
    </div>

    <%= javascript_include_tag 'application' %>

    <% if ENV.fetch("GOOGLE_ANALYTICS_ID", nil).present? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){

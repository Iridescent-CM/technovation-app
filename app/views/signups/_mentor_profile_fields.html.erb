<%= f.fields_for :account do |a| %>
  <%= a.input :gender,
    label: t('models.account.gender'),
    collection: Account.genders.keys %>
<% end %>

<%= f.input :school_company_name,
  label: t('models.mentor_profile.school_company_name') %>

<%= f.input :job_title %>

<% if f.object.persisted? %>
  <%= f.input :bio, label: "#{t('models.chapter_ambassador_profile.bio.signup_label')}" %>
  <span class="text-sm italic">
    Use up to 1500 characters.
  </span>
<% end %>

<%= f.label :mentor_types, t('views.mentor.form.mentor_types'), class: "mt-6" %>
<%= f.association :mentor_types, as: :check_boxes, label: false %>

<%= f.label :expertise_ids, t('views.signups.form.skills_and_interests_html'), class: "mt-6" %>
<%= f.collection_check_boxes :expertise_ids, @expertises, :id, :name do |b| %>
  <span class="inline-checkbox">
    <%= b.check_box %><%= b.label { b.text } %>
  </span>
<% end %>

<label class="mt-6">Connection Preferences</label>
<%= f.input :accepting_team_invites,
            as: :radio_buttons,
            collection: [["Yes", true], ["No", false]],
            label: "Allow teams to find you in search results and invite you to join" %>
<%= f.input :virtual,
            as: :radio_buttons,
            collection: [["Yes", true], ["No", false]],
            label: "Indicate to teams that you can be an online, remote mentor" %>
<%= f.input :connect_with_mentors,
            as: :radio_buttons,
            collection: [["Yes", true], ["No", false]],
            label: "Allow other mentors to find you in search results and connect" %>

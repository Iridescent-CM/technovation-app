<% disabled ||= false %>

<div class="account-type">

  <% if disabled %>
    <div class="account-type__img account-type__img--disabled account-type__img--<%= role %>">
      <span>
        <%= t("views.signups.new.roles.#{role}") %>
      </span>
    </div>
  <% else %>
    <%= link_to raw("<span>" + t("views.signups.new.roles.#{role}") + "</span>"),
                public_send("#{role}_signup_path"),
                class: "account-type__img account-type__img--#{role}"
                %>
  <% end %>

  <div class="account-type__description">
    <% if disabled %>
      <p><%= t("views.signups.new.descriptions.disabled.#{role}") %></p>
    <% else %>
      <p><%= t("views.signups.new.descriptions.#{role}") %></p>
    <% end %>

    <%= link_to t("views.signups.new.signup_link.#{role}"),
                public_send("#{role}_signup_path"),
                class: "primary-button",
                disabled: disabled %>
  </div>
</div>


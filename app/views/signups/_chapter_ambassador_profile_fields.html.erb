<%= f.fields_for :account do |a| %>
  <%= a.input :gender,
    label: t('models.account.gender'),
    collection: Account.genders.keys %>
<% end %>

<%= f.input :job_title,
  label: t("models.chapter_ambassador_profile.job_title"),
  :label_html => { :class => "mt-4" } %>

<%= f.label :organization_status,
  t("models.chapter_ambassador_profile.organization_status",
    organization_name: f.object.chapter&.organization_name.presence || "Organization")
%>

<%= f.select :organization_status,
  options_for_select(
    ChapterAmbassadorProfile.organization_statuses.map { |k,v|
      [k.humanize, v]
    },
    selected: f.object.organization_status
  )
%>

<%= f.input :phone_number,
  label: t("models.chapter_ambassador_profile.phone_number"),
  :label_html => { :class => "mt-4"  }
%>

<% if SeasonToggles.show_survey_link_modal?(current_scope, current_account) %>
  <%= content_tag :div,
    id: "survey-modal",
    class: "modal",
    data: {
      heading: t("views.application.survey"),
      open_on_page_load: true,
      on_close: public_send(
        "#{current_scope}_cookies_url",
        name: :last_seen_survey_modal,
        value: SeasonToggles.survey_link(current_scope, "changed_at")
      ),
    } do %>
    <div class="modal-content">
      <p>
        Make your voice heard, help us improve the program!
      </p>

      <p>
        <%= link_to SeasonToggles.survey_link(current_scope, "text"),
          SeasonToggles.survey_link(current_scope, "url"),
          target: "_blank" %>
      </p>
    </div>
  <% end %>
<% end %>

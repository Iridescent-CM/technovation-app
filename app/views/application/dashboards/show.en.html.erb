<div class="home-page">
  <% if SeasonToggles.registration_open? %>
    <div class="home-page__form-wrapper simple-card">
      <h1 class="appy-title">Create Your Account</h1>
      <%= render 'signup_attempts/form', attempt: @signup_attempt %>
    </div>

    <div class="home-page__welcome-message">
      <%= render 'post_message' %>
    </div>
  <% else %>
    <div class="home-page__off-season simple-card">
      <%= render 'off_season_splash' %>
    </div>
  <% end %>
</div>

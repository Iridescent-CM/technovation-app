<% if current_session.authenticated? %>
  <div class="notice notice--top">
    You are logged in as <%= current_session.full_name %> |

    <% if current_account.admin? %>
      <%= link_to "return to Admin mode",
        admin_participant_session_path(current_session),
        data: {
          method: :delete,
          turbolinks: 'false',
        } %>
    <% else %>
      <%= link_to "return to RA mode",
        regional_ambassador_participant_session_path(current_session),
        data: {
          method: :delete,
          turbolinks: 'false',
        } %>
    <% end %>
  </div>
<% end %>

<header
  class="grid grid--bleed navigation <%= "logged-in" if current_account.authenticated? %>"
>
  <%= web_icon("navicon") %>

  <div class="grid__col-9 grid__col-sm-3">
    <%= link_to "Technovation",
      content_for?(:root_path) ? yield(:root_path) : root_path,
      class: "logo" %>
  </div>

  <div class="grid__col-3 grid__col-sm-9 grid--align-end">
    <nav class="menu horizontal">
      <%= web_icon("close") %>

      <% if content_for?(:menu) %>
        <%= yield :menu %>
      <% elsif current_account.authenticated? %>
        <%= link_to t('views.application.signout'), signout_path %>
      <% else %>
        <%= link_to t('views.application.signin'),
          signin_path,
          class: al(signin_path) %>
      <% end %>
    </nav>
  </div>
</header>

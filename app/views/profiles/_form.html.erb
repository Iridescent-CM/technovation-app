<%
  url ||= send("#{current_scope}_profile_path")
  admin ||= false
%>

<%= render layout: 'signups/form',
  locals: {
    signup: profile,
    url: url,
    title: title,
    admin: admin,
  } do |f| %>

  <% button_class = "button" %>
  <% if ["student", "judge"].include? current_scope %>
    <% button_class = "tw-green-btn" %>
  <% end %>
  
  <%= 
    f.button :submit, 
    t('views.application.save'), 
    class: button_class 
  %>
<% end %>

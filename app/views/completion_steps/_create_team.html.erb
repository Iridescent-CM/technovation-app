<h1 class="margin--none padding--none">Create a new team</h1>

<% if hidden ||= false %>
  <%= render 'explanations/feature_not_available', feature: :create_team %>
<% else %>
  <p>
    Create your own team and then invite your other team members,
    or let team members find you.
  </p>

  <div class="step-actions">
    <%= link_to(
      t("views.profile_requirements.create_join_team.links.create.text"),
      [:new, current_scope, :team],
      class: "button"
    ) %>
    or
    <%= link_to(
      "Find more teams",
      [:new, current_scope, :team_search]
    ) %>
  </div>
<% end %>

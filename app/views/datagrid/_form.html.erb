<%= form_for grid, options do |f| -%>
  <% grid.filters.each do |filter| %>
    <div class="datagrid-filter filter">
      <%= f.datagrid_label filter %>
      <%= f.datagrid_filter filter, partials: options[:partials] %>
    </div>
  <% end %>

  <div class="datagrid-actions">
    <%= f.submit I18n.t("datagrid.form.search").html_safe, class: "button" %>
    <%= link_to I18n.t('datagrid.form.reset').html_safe, url_for(grid.to_param => {}) %>
  </div>
<% end -%>

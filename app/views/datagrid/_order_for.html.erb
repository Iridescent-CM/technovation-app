<div class="order">
  <%= link_to(
      web_icon("sort-up", text: "Sort ascending"),
      url_for(
        grid.param_name => grid.as_query.merge(
          order: column.name,
          descending: false
        )
      ),
      class: "asc") %>

  <%= link_to(
      web_icon("sort-down", text: "Sort descending"),
      url_for(
        grid.param_name => grid.as_query.merge(
          order: column.name,
          descending: true
        )
      ),
      class: "desc") %>
</div>

<div class="order">
  <%= link_to(
      "Sort ascending",
      url_for(
        grid.param_name => grid.as_query.merge(
          order: column.name,
          descending: false
        )
      ),
      class: "asc") %>

  <%= link_to(
      "Sort descending",
      url_for(
        grid.param_name => grid.as_query.merge(
          order: column.name,
          descending: true
        )
      ),
      class: "desc") %>
</div>

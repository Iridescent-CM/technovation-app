<div class="meet-your-ambassador-intro">
  <div class="bg-white p-6 rounded-md flex flex-col lg:flex-row justify-between">
    <div id="cha-avatar" class="mx-4 mb-4 lg:mb-0 w-full lg:w-1/3 flex items-center">
      <%= image_tag club.primary_contact&.profile_image_url.presence || "placeholders/avatars/1.svg",
        class: "rounded-bl-3xl rounded-tr-3xl" %>
    </div>

    <div id="cha-profile-summary" class="mb-4 lg:mb-0 p-0 lg:px-8 w-full lg:w-2/3">
      <p>Welcome to Technovation Girls!</p>

      <% if club.name.present? %>
        <p>
          You are connected with <span class="font-medium"><%= club.name.titleize %></span>.
        </p>
      <% end %>

      <p class="mt-4 font-medium"><%= club.name&.titleize.presence || "Club name coming soon"%></p>
      <p class="mt-4"><%= club.primary_contact&.full_name.presence %></p>
      <p class="mt-4"><%= club.summary.presence || "Your Club Ambassador will be adding more information about the Club soon." %></p>

      <%= render "dashboards/rebrand/update_chapterable", chapterable_type: "Club" %>
    </div>
  </div>
</div>


<% ra_dashboard ||= false %>

<% if regional_ambassador.provided_intro? %>
  <% if ra_dashboard %>
    <h5 class="reset">
      Your program introduction
    </h5>
  <% else %>
    <div class="grid ra-intro">
      <div class="grid__col-12">
        <h3 class="reset ra-intro-heading">
          Meet your Regional Ambassador!
        </h3>

      <%= image_tag regional_ambassador.profile_image_url, class: "grid__cell-img ra-intro-image" %>

      <h3><%= regional_ambassador.full_name %></h3>
  <% end %>

  <%= simple_format regional_ambassador.intro_summary %>

  <ul class="reset social-links">
    <% regional_ambassador.regional_links.each do |link| %>
      <li>
        <% if link.name == "email" %>
          <%= mail_to link.value, web_icon("envelope-o", text: link.value) %>
        <% else %>
          <%= link_to web_icon(link.icon, text: link.display_text), link.url %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <% unless ra_dashboard %>
      </div>
      </div>
  <% end %>
<% end %>

student:
  parental_consent:
    complete_condition: "parental_consent_signed?"

  create_join_team:
    complete_condition: "is_on_team?"
    prerequisites: "parental_consent"
    unlocks: "student_team_path[team], new_student_team_path, new_student_team_search_path"

  find_mentor:
    complete_condition: "team_has_mentor?"
    prerequisites: "parental_consent, create_join_team"
    unlocks: "new_student_mentor_search_path"

mentor:
  consent_waiver:
    complete_condition: "consent_signed?"

  background_check:
    complete_condition: "background_check_complete?"

  build_profile:
    prerequisites: "background_check, consent_waiver"
    complete_condition: "bio_complete?"

  create_join_team:
    complete_condition: "is_on_team?"
    prerequisites: "background_check, build_profile, consent_waiver"
    unlocks: "mentor_teams_path, mentor_join_requests_path, new_mentor_team_search_path, new_mentor_team_path, mentor_mentor_searches_path"

regional_ambassador:
  consent_waiver:
    complete_condition: "consent_signed?"

  background_check:
    complete_condition: "background_check_complete?"

  build_profile:
    prerequisites: "background_check, consent_waiver"
    complete_condition: "profile_complete?"
